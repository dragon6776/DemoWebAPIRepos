@model IEnumerable<Demo.ODataV4.Models.Order>

@{
    ViewBag.Title = "Index";
    var guidId = Guid.NewGuid().ToString();
}

<script>
    var baseUrl = "/odata/Orders";

    function createAnOrder() {

        /* public int Id { get; set; }
        public string Title { get; set; }
        public string Note { get; set; }
        public double TotalAmount { get; set; }*/

        var model = {
            Id: "0",
            Title: "Test-@guidId",
            Note: "Note - @guidId",
            TotalAmount: "11000",
        };

        $.ajax({
            url: baseUrl,
            data: model, // co can stringyfly???
            type: "POST",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                console.log(data);
            },
            error: function (data) {
                console.log(data);
            }
        });
    }

    function updateAnOrder(id) {

        var model = {
            Id: id,
            Title: "",
            Note: "",
            TotalAmount: "0",
        }

        $.ajax({
            url: baseUrl + "(" + id + ")",
            data: model, // co can stringyfly???
            type: "PUT",
            dataType: "json",
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                console.log(data);
            },
            error: function (data) {
                console.log(data);
            }
        });
    }

    function deleteAnOrder(id) {
        $.ajax({
            url: baseUrl + "(" + id + ")",
            type: "DELETE",
            success: function (data) {
                console.log(data);
            },
            error: function (data) {
                console.log(data);
            }
        });
    }
</script>

<h2>Index</h2>

<p>
    <button class="btn btn-success" onclick="createAnOrder()">Create an order</button>
    <button class="btn btn-primary" onclick="updateAnOrder()">Update an order</button>
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                <button class="btn btn-danger btn-sm" onclick="deleteAnOrder(@item.Id)">Delete</button>
            </td>
        </tr>
    }

</table>
